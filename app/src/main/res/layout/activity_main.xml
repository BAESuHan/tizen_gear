<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout tools:context=".ConsumerActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textStyle="bold" android:textSize="24sp" android:layout_weight="0.06" android:gravity="center" android:id="@+id/tvStatus"/>

    <ListView android:layout_height="0dip" android:layout_width="match_parent" android:layout_weight="0.9" android:id="@+id/lvMessage"> </ListView>

    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:textSize="24sp" android:id="@+id/buttonConnect" android:text="@string/buttonConnect" android:onClick="mOnClick"/>

    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:textSize="24sp" android:id="@+id/buttonDisconnect" android:text="@string/buttonDisconnect" android:onClick="mOnClick"/>

    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:textSize="24sp" android:id="@+id/buttonSend" android:text="@string/buttonSend" android:onClick="mOnClick"/>

</LinearLayout>